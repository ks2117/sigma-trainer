<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow android:background="@drawable/activity_main_card_header" android:layout_height="64dp">
            <TextView
                android:layout_column="1"
                android:text="Open..."
                android:textAlignment="center"/>
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:alpha="1"
                app:srcCompat="@drawable/graph_icon"
                android:scaleX=".1"
                android:scaleY=".1"/>
        </TableRow>

        <TableRow android:layout_marginBottom="5dp">
            <TextView
                android:layout_column="1"
                android:text="Save..."
                android:textAlignment="center"
                android:background="@drawable/activity_main_card_body"
                android:padding="3dip" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>